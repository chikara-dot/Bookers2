<% book.book_comments.each do |book_comment| %>
         <tr>
           <td><%= attachment_image_tag book_comment.user, :profile_image,fallback: "no_image.jpg",size: "40x40" %>
               <%= book_comment.comment %>
               <% if book_comment.user == current_user %>
               <%= link_to "Destroy", book_book_comment_path(book,book_comment), method: :delete, class:"btn btn-danger", remote: true %>
               <% end %>
           </td>
         </tr>
         <tr>
           <td><%= book_comment.user.name %></td>
         <% end %>
         </tr>