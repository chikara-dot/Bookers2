<%= render 'books/list', user: @user ,book: @book %>

<div class="col-md-8 offset-md-1 mt-3">
<h2>Books</h2>
<table class="table">
 <thead>
     <tr>
         <th></th>
         <th>Title</th>
         <th>Opinion</th>
         <th></th>
     </tr>
 </thead>
 <tbody>

        <% @books.each do |book| %>
     <tr></tr>
         <td><%= link_to user_path(book.user) do %>
         <%= attachment_image_tag @user, :profile_image , format: 'jpeg', fallback: "no_image.jpg", size: "40x40" %>
         <% end %></td>
        <td><%= link_to book.title, book_path(book.id) %></td>
        <td><%= book.body %></td>
        <% end %>
     </tr>
 </tbody>
</table>
</div>