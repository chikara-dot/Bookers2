<%= render 'books/list', user: current_user, book: @book %>




<div class="col-md-8 offset-md-1">
  <h2>Books</h2>
  <table class="table table-hover table-inverse">
    <thead>
      <tr>
       <th>Title</th>
       <th>Opinion</th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
      <tr>
        <td><%= attachment_image_tag book.user, :profile_image , :fill, 30, 30, fallback: "no_image.jpg" %></td>
        <td><%= link_to book.title, book_path(book.id)%></td>
        <td><%= book.body %></td>
      </tr>
      <% end %>
    </tbody>
  </table>

</div>
</div>
</div>