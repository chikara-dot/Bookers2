<div class="container">
  <div class="row">
    <div class="col-md-3">
    <p id="notice"></p>
<h2>User info</h2>


  <%= attachment_image_tag user, :profile_image, :fill,60,60,fallback: "no_image.jpg" %>
  <table class="table">
    <tr>
     <th>name</th>   <th><%= user.name %></th>
    </tr>
    <tr>
     <th>introduction<%= user.introduction %></th>
    </tr>
  </table>

<%= link_to "",book_edit_path, class:"btn btn-outline-secondary btn-block fas fa-user-cog " %>

<h2>New book</h2>
<%= form_with model:@book,url: '/books', method: :post, local:true do |f| %>
<h5>Title</h5>
<%= f.text_field :title %>
<h5>Opinion</h5>
<%= f.text_area :body %>
<%= f.submit 'Create Book', class:"btn btn-success" %>
<% end %>
</div>
